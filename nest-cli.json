{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder":{
      "type": "swc"
    },
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      "common/mailer/templates/**/*.hbs"
    ]
  },
  "generateOptions": {
    "spec": false
  }
}